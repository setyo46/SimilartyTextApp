<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewNim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/inputText_username"
            android:textColor="@color/black"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/initial_name"
            android:textSize="18sp"
            card_view:layout_constraintStart_toStartOf="@id/textViewNim"
            card_view:layout_constraintTop_toBottomOf="@id/textViewNim" />

        <TextView
            android:id="@+id/textViewNameRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/inputText_room"
            android:textColor="@color/black"
            card_view:layout_constraintStart_toStartOf="@id/textViewName"
            card_view:layout_constraintTop_toBottomOf="@id/textViewName" />

        <TextView
            android:id="@+id/textViewNameTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:text="@string/inputText_time"
            android:textColor="@color/black"
            card_view:layout_constraintStart_toStartOf="@id/textViewNameRoom"
            card_view:layout_constraintTop_toBottomOf="@id/textViewNameRoom" />

        <TextView
            android:id="@+id/textViewNameDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/inputText_date"
            android:layout_marginStart="6dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            card_view:layout_constraintBottom_toBottomOf="@+id/textViewNameTime"
            card_view:layout_constraintStart_toEndOf="@+id/textViewNameTime"
            card_view:layout_constraintTop_toTopOf="@+id/textViewNameTime" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_penilaian_sempro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@color/primary"
            app:srcCompat="@drawable/edit"
            app:tint="@color/black"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>